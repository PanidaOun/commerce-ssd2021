<h1> New Order </h1>
<p>
    Confirm to order <%= @product.title %> ?
    <br>
    <%= image_tag(@product.primary_image, height: '300px', width: '300px', class: 'mx-auto img-thumbnail') %>
</p>
<%= form_with model: @order do |form| %>
    <div>
        <%= form.hidden_field :product_id, value: @product_id %>
    </div>

    <div class="field form-group">
        <%= form.label :address %><br>
        <%= form.text_area :address, class:"form-control"%>
    </div>

    <div class="actions">
        <%= form.submit class:"btn btn-secondary"%>
    </div>
<% end %>

<br>
<%= link_to root_path do %>
    <% button_tag 'Back', class: 'btn btn-round btn-b' %>
<% end %>